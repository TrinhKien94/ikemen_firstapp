<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @image.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @image.title %>
</p>

<p>
  <strong>File:</strong>
  <%= image_tag @image.file %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @image.created_at %>
</p>

<h2>Comment</h2>
<ul>
	<% @image.image_coment.each do |img_cmt| %>
	<li ><%=img_cmt.comment %>
		(<i><%= img_cmt.user_id%> </i>)
	</li>
	<%end%>
</ul>
<%= form_for(@image_coment) do |f| %>
<div class= "field">
	<%= f.label :comment %><br>
	<%=f.text_field :comment %>
	<%= f.hidden_field :image_id, :value =>  @image.id %>
</div>
<div class="actions">
	<% f.submit %>
</div>
<% end %>


